@page
@model ReportingModel
@{
    ViewData["Title"] = "Reporting";
}

<div class="text-center">
    <h1 class="display-4">Reporting</h1>
    <p>Activation history.</p>
</div>

<div class="box">         
    <!-- Search Form -->
    <div class="mb-4">
        <form method="get">
            <div class="row g-3">
                <div class="col-md-6">
                    <input type="text" class="form-control" id="searchTerm" name="SearchTerm" 
                            value="@Model.SearchTerm" placeholder="Enter hostname...">
                </div>
                <div class="col-md-6 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">Search</button>
                    <a href="/Reporting" class="btn btn-secondary">Clear</a>
                </div>
            </div>
        </form>
    </div>

    <!-- Results Table -->
    @if (Model.Machines.Any())
    { 
        <div class="table-responsive">
            <table class="table table-sm table-hover">
                <thead>
                    <tr>
                        <th scope="col">Hostname</th>
                        <th scope="col">Total Activations</th>
                        <th scope="col">Latest Activation</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var machine in Model.Machines)
                {
                    <tr>
                        <td>
                            <span>@machine.Hostname</span>
                        </td>
                        <td>
                            <span>@machine.ActivationRecords.Count</span>
                        </td>
                        <td>
                            @if (machine.ActivationRecords.Any())
                            {
                                var latest = machine.ActivationRecords.OrderByDescending(ar => ar.LicenseAcquisitionDate).First();
                                <span>@latest.LicenseAcquisitionDate.ToString("yyyy-MM-dd HH:mm")</span>
                            }
                            else
                            {
                                <span class="text-muted">No activation records found.</span>
                            }
                        </td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary" type="button" 
                                    data-bs-toggle="collapse" data-bs-target="#details-@machine.Id" 
                                    aria-expanded="false" aria-controls="details-@machine.Id">
                                View Details
                            </button>
                        </td>
                    </tr>
                    <tr class="collapse" id="details-@machine.Id">
                        <td colspan="4">
                            <div class="p-3 bg-light">
                                @if (machine.ActivationRecords.Any())
                                {
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Product ID</th>
                                                    <th>Installation ID</th>
                                                    <th>Confirmation ID</th>
                                                    <th>Activation Date</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            @foreach (var record in machine.ActivationRecords.OrderByDescending(ar => ar.LicenseAcquisitionDate))
                                            {
                                                <tr>
                                                    <td>@record.ExtendedProductID</td>
                                                    <td>@record.InstallationID</td>
                                                    <td>@record.ConfirmationID</td>
                                                    <td>@record.LicenseAcquisitionDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                                </tr>
                                            }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <p class="mb-0 text-muted">No activation records found.</p>
                                }
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>


        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Reporting pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    @if (Model.PageNumber > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?PageNumber=@(Model.PageNumber - 1)&SearchTerm=@Model.SearchTerm">Previous</a>
                        </li>
                    }

                    @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" href="?PageNumber=@i&SearchTerm=@Model.SearchTerm">@i</a>
                        </li>
                    }

                    @if (Model.PageNumber < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?PageNumber=@(Model.PageNumber + 1)&SearchTerm=@Model.SearchTerm">Next</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
</div>


@section Scripts {
    <script>
        // Auto-collapse expanded details when opening new ones
        document.addEventListener('DOMContentLoaded', function() {
            const collapseElements = document.querySelectorAll('[data-bs-toggle="collapse"]');
            collapseElements.forEach(function(element) {
                element.addEventListener('click', function() {
                    const targetId = this.getAttribute('data-bs-target');
                    const allCollapses = document.querySelectorAll('.collapse.show');
                    allCollapses.forEach(function(collapse) {
                        if (collapse.id !== targetId.substring(1)) {
                            new bootstrap.Collapse(collapse, { toggle: false }).hide();
                        }
                    });
                });
            });
        });
    </script>
}
